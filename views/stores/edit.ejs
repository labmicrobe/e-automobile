<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center; color:white">Edit <%= store.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/stores/<%= store._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="store[name]" value="<%= store.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="store[image]" value="<%= store.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="store[description]" value="<%= store.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/stores">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>

